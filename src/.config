DISTRO_NAME="microtux"
DISTRO_PROP="MicroTux"
KERNEL_NAME="linux"
KERNEL_PROP="Linux"

KERNEL_VERSION=4.18.3
KERNEL_SOURCE_URL=https://www.kernel.org/pub/linux/kernel/v4.x/linux-${KERNEL_VERSION}.tar.xz

MUSL_VERSION=1.1.19
MUSL_SOURCE_URL=https://www.musl-libc.org/releases/musl-${MUSL_VERSION}.tar.gz

BUSYBOX_VERSION=1.25.0
BUSYBOX_SOURCE_URL=http://busybox.net/downloads/busybox-${BUSYBOX_VERSION}.tar.bz2

DROPBEAR_VERSION=2018.76
DROPBEAR_SOURCE_URL=https://matt.ucc.asn.au/dropbear/releases/dropbear-${DROPBEAR_VERSION}.tar.bz2

[ "$MARCH" = "" ] && MARCH=$(uname -m)
case $MARCH in
  i[4-6]86)
    TARCH=i486
    LIBDIRSUFFIX=""
    ;;
  [Xx]86[_-]64)
    TARCH=x86_64
    LIBDIRSUFFIX="64"
    ;;
  *)
    echo "Unsupported architecture -- $MARCH"
    exit 1
esac
if [ "$TARCH" = "i486" ]; then
  OURCFLAGS="-O3 -march=$TARCH -mtune=$MARCH"
elif [ "$TARCH" = "x86_64" ]; then
  OURCFLAGS="-O3 -fPIC"
fi

CFLAGS="$OURCFLAGS"; export CFLAGS
CXXFLAGS="$OURCFLAGS"; export CXXFLAGS
